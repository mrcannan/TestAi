    "test:regression": "ENVIRONMENT=staging playwright test --project=regression-chromium",
    "test:e2e": "ENVIRONMENT=staging playwright test --project=e2e-chromium",
    "test:ui": "playwright test --ui",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "test:phase1": "playwright test tests/smoke/subscription-page.smoke.spec.ts",
    "test:phase2": "playwright test tests/regression/",
